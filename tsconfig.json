{
    "compilerOptions": {
      "baseUrl": ".",  
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "removeComments": true,
      "resolveJsonModule": false,
      "isolatedModules": true,
      "skipLibCheck": true,
      "types": [
        "node"
      ],
      "lib": [
        "ESNext",
        "DOM"
      ],
      "sourceMap": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx", 
        "src/**/*.vue", 
        "*.config.ts", 
        "*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "sandbox",
      "src/**/*.spec.ts"
    ]
  }