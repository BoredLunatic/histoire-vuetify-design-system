{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "removeComments": false,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": [
        "node"
      ],
      "lib": [
        "ESNext",
        "DOM"
      ],
      "sourceMap": false,
      "preserveWatchOutput": true,
      // Strict
      "noImplicitAny": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx", 
        "src/**/*.vue",
    ],
    "exclude": [
      "node_modules",
      "dist/**/*",
      "sandbox/**/*",
      "src/**/*.spec.ts"
    ]
  }